@model TestOrder.Web.ViewModels.Food.IndexFoodViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.listOfFoodByRestaurant.First().NameOfTheFood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listOfFoodByRestaurant.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listOfFoodByRestaurant.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listOfFoodByRestaurant.First().AverageScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.listOfFoodByRestaurant.First().RestaurantName)
            </th>

            <th></th>
        </tr>
        
    @foreach (var item in Model.listOfFoodByRestaurant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfTheFood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RestaurantName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Vote", "SetScore", new { id = item.ID }, new { @class = "textDecoration" })|

            </td>
        </tr>
    }

    </table>
